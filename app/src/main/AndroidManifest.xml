<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.testapp2.app">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/beat"
            android:label="@string/app_name">

        <activity
                android:name=".LoadActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.Material.NoActionBar"
                android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:launchMode="singleTask"
                android:theme="@style/AppTheme"/>
        <activity
                android:name=".ItemEdit"
                android:theme="@style/AppTheme"/>
        <activity
                android:name=".NewDialog"
                android:theme="@style/NewDialogTheme"/>
        <activity
                android:name=".ItemEdit_Finish"
                android:theme="@style/AlertNoActionBar"/>
        <activity
                android:name=".KeepBeat"
                android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen"/>
        <activity
                android:name=".KeepFinish"
                android:theme="@android:style/Theme.Material.Light.NoActionBar.Fullscreen"/>
        <activity
                android:name=".LoginPage"
                android:theme="@style/AppTheme"/>
        <activity
                android:name=".RegisterPage"
                android:theme="@style/AppTheme"/>
        <activity
                android:name=".PersonalCentre"
                android:theme="@style/AppTheme"/>
        <activity
                android:name=".HistoryPage"
                android:theme="@style/AppTheme"/>
    </application>


</manifest>
