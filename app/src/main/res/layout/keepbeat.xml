<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context=".KeepBeat"
             android:keepScreenOn="true"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_weight="3">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/keepbeatpartname"
                    android:textSize="@dimen/keepbeatpartnametextsize"
                    android:gravity="center_horizontal"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/keepbeatkeepitemname"
                    android:textSize="@dimen/keepbeatkeepitemnametextsize"
                    android:gravity="center_horizontal"/>
        </LinearLayout>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/keepbeatdisplay"
                android:textSize="@dimen/keepbeatdisplaytextsize"
                android:gravity="center_horizontal"
                android:layout_weight="4"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keepbeatdisplay2"
                android:textSize="@dimen/keepbeatdisplaytextsize"
                android:gravity="center_horizontal"
                android:layout_weight="4"
                android:layout_gravity="center_horizontal"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keepbeatpause"
                    android:text="暂停"
                    style="@android:style/Widget.Material.Button.Borderless"
                    android:layout_weight="1"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keepbeatcancel"
                    android:text="取消"
                    style="@android:style/Widget.Material.Button.Borderless"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
            android:id="@+id/keepbeat_BeatDispaly"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</FrameLayout>